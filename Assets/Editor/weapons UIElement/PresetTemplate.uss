#ListView 
{
	height: 100px;
	width: auto;
	flex: 1;
	margin: 15px;	
}

#ListContainer 
{
	display: flex;
	flex-direction: column;
	align-self: center
	width: 223px;
}

.ListButton
{
	height: auto;
	width: auto;
	border-radius: 0;
	padding-left: 0;
	padding-right: 0;
	padding-top: 0;
	padding-bottom: 0;
}
.ListText{
-unity-text-align: upper-center;
-unity-font-style: bold; 
}

.SelectedListButton
{
	margin-left: 20px;
	flex: 0.1;
	background-color: rgba(100,100,100,1);
}

.ImageContainer{
height: 200px;	
width: 200px;	
background-color: rgba(170,170,170,1);
}


.ListLabel
{
	flex: 0.9;
	position: relative;
	border-color: rgba(21, 132, 67,1);
	border-width: 3px;
	max-height: 50px;
	min-height: 30px;	
	-unity-text-align: middle-center;
}


#RightBottomPanel *
{
	padding: 2px;
}

#RightBottomPanel Label 
{
	min-width: 50px;
}


.ButtonList 
{
	flex: 0.10;
	padding: 10px;
	height: 10px;
	min-width: 50px;
	margin-top: 15px;
	margin-left: 50px;
	margin-right:50px;
}

Button:hover
{
	background-color: rgba(198, 198, 198,1);
	text-color: rgb(21, 132, 67);
}

Button 
{
	background-image: none;
	background-color: rgba(242, 246, 250,1);
	border-radius: 10px;
	border-color: rgba(100, 100, 100,1);
	border-width: 2px;
}

Button:active
{
	background-color: rgba(51, 51, 51,1);
	text-color: rgba(255,255,255,1);
}

#ObjectToInstantiate 
{
	flex: 0.05;
	margin-top: 15px;
	min-width: 50px;
	margin-left: 50px;
	margin-right:50px;
}

#SpriteField 
{
	flex: 0.05;
	margin-top: 15px;
	min-width: 50px;
	margin-left: 50px;
	margin-right:50px;
}

#PivotField 
{
	flex: 0.05;
	margin-top: 15px;
	min-width: 50px;
	margin-left: 50px;
	margin-right:50px;
}
